                                <MenuItem Header="Define New Stock" HorizontalAlignment="Left" Width="auto" />
                                <MenuItem x:Name="mn_DeleteStock" Header="Delete Selected Stock" HorizontalAlignment="Left" Width="auto" />
                                <MenuItem x:Name="mn_Undo" Header="Undo-Delete Stock" HorizontalAlignment="Left" Width="auto"/>
                                <MenuItem x:Name="mn_DeleteAll" Header="Delete All Stock" HorizontalAlignment="Left" Width="auto" />
                                <Separator />
                                <MenuItem x:Name="mn_CMR" Header="Custom Stock Relations" HorizontalAlignment="Left" Width="auto"/>
                            </MenuItem>
                            <MenuItem Header="Print Menu" Width="auto">
                                <MenuItem Header="Selected Item" HorizontalAlignment="Left" Width="auto" Margin="0,0,0,0"/>
                                <MenuItem Header="Print All" HorizontalAlignment="Left" Width="auto">
                                    <MenuItem Header="Include Default Value" HorizontalAlignment="Left" Width="auto" Margin="0,0,0,0"/>
                                    <MenuItem Header="Omit Default Value" HorizontalAlignment="Left" Width="auto" Margin="0,0,0,0"/>
                                </MenuItem>
                            </MenuItem>
                            <MenuItem Header="LogFile"  Width="auto">
                                <MenuItem Header="Show Log" HorizontalAlignment="Left" Width="auto" Margin="0,0,-0,0" />
                            </MenuItem>
                            <MenuItem Header="Maintenance" Width="auto">
                                <MenuItem Header="BackUp" HorizontalAlignment="Left" Width="auto"/>
                                <MenuItem Header="Restore" HorizontalAlignment="Left" Width="auto"/>
                                <Separator />
                                <MenuItem Header="View/Edit Sytem default" HorizontalAlignment="Left" Width="auto" Margin="0,0,0,0"/>
                            </MenuItem>

                            <MenuItem Header="User" Width="auto">
                                <MenuItem Header="Log On" HorizontalAlignment="Left" Width="auto"/>
                                <MenuItem Header="Log Off" HorizontalAlignment="Left" Width="auto" Margin="0,0,0,0"/>
                            </MenuItem>
                        </Menu>

                        <Label Grid.Row="1" Grid.Column="1" Content="Material" Foreground="White"
                                   Width="auto"  HorizontalAlignment="Stretch" FontSize="14"
                                   VerticalAlignment="Top" Margin="5,10,5,0" Background="{DynamicResource gradientBrushSegmentedTabItem}"/>

                        <Border BorderThickness="2" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" BorderBrush="#FFAEA9A9" Margin="0,4,0,0">
                            <ListView x:Name="LstStock"  HorizontalAlignment="Stretch" Height="260" Margin="3,40,3,3" 
                                      ItemsSource="{Binding ProductList, UpdateSourceTrigger=PropertyChanged}" SelectedIndex="{Binding StockSelectedIndex}" 
                                      VerticalAlignment="Top" IsSynchronizedWithCurrentItem="False"  SelectedValue="{Binding StockSelectValue}" >
                                <ListView.Background>
                                    <LinearGradientBrush EndPoint="0.939,0.919" StartPoint="0.061,0.081">
                                        <GradientStop Color="#FFFFE07E" Offset="0"/>
                                        <GradientStop Color="#FFFFFAEA" Offset="1"/>
                                    </LinearGradientBrush>
                                </ListView.Background>
                            </ListView>
                        </Border>
                        <Grid Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Grid.ColumnSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="105"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="0"/>
                                <RowDefinition Height="5"/>
                            </Grid.RowDefinitions>


                            <GroupBox Grid.Row="1" Grid.Column="1"  Margin="2" HorizontalAlignment="Stretch"  BorderThickness="0">
                                <GroupBox.BorderBrush>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Transparent" Offset="1"/>
                                        <GradientStop Color="Black" Offset="1"/>
                                    </LinearGradientBrush>
                                </GroupBox.BorderBrush>
                                <GroupBox.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" Direction="721" ShadowDepth="1" RenderingBias="Quality" />
                                </GroupBox.Effect>
                                <Border BorderThickness="2" BorderBrush="#FFAEA9A9" Margin="0,4,0,0">
                                    <Grid Grid.Row="1" Grid.Column="1" Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" 
                                          Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0"/>
                                            <ColumnDefinition Width="0"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="0"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="5"/>
                                        </Grid.RowDefinitions>

                                        <TextBox x:Name="StockName"  Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Width="200"  
                                                 Text="{Binding StockSelectValue}"  IsReadOnly="True" Background="AntiqueWhite"
                                                 FontSize="20" MouseDoubleClick="StockName_DClick" />

                                        <Label Grid.Column="3" Grid.Row="1" Content="Calibration" VerticalAlignment="Center" 
                                               HorizontalAlignment="Right"  Foreground="White" Margin="0,3,0,6"/>

                                        <ComboBox Grid.Column="4" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                                                  ItemsSource="{Binding CalibrationList, UpdateSourceTrigger=PropertyChanged}" 
                                                  SelectedValue="{Binding SelCalValue,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                  SelectedIndex="{Binding CalNameIndex,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                  Background="AntiqueWhite" Height="auto" FontSize="16" Width="200" IsEnabled="{Binding BProCalMod}" Grid.RowSpan="2"/>

                                        <Label  Grid.Column="3" Grid.Row="2" Content="Constants" Foreground="White"
                                                VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,4,0,5"/>

                                        <Label  Grid.Column="4" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center"
                                                Content="A"  Margin="20,0,0,0" Foreground="White"/>
                                        <TextBlock Grid.Column="4" Grid.Row="2" Width="60" Height="25" 
                                                   Text="{Binding Aval}" IsEnabled="False" FontSize="14" TextAlignment="Center" 
                                                   Margin="50,0,0,0" HorizontalAlignment="Left" Background="Black" Foreground="white"/>

                                        <Label  Grid.Column="4" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center"
                                                Content="B" Margin="0,0,80,0" Foreground="White"/>
                                        <TextBlock Grid.Column="4" Grid.Row="2" Width="60" Height="25" 
                                                   Text="{Binding Bval}" IsEnabled="False" FontSize="14" TextAlignment="Center" 
                                                   Margin="0,0,10,0" HorizontalAlignment="Right" Background="Black" Foreground="white"/>
                                    </Grid>
                                </Border>
                            </GroupBox>

                            <Grid Grid.Row="2" Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>

                                <GroupBox x:Name="GroupMoisture" Grid.Column="1"  Header="Moisture Limits" BorderThickness="0"
                                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="Yellow" FontSize="14">
                                    <GroupBox.BorderBrush>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="#FF151515" Offset="1"/>
                                        </LinearGradientBrush>
                                    </GroupBox.BorderBrush>
                                    <GroupBox.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="10" Direction="721" ShadowDepth="1" RenderingBias="Quality" />
                                    </GroupBox.Effect>

                                    <Border BorderThickness="2" BorderBrush="#FFAEA9A9" Margin="0,4,0,0">
                                        <Grid  Margin="5">
                                            <Grid.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="Black" Offset="0"/>
                                                    <GradientStop Color="#FF979797" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Grid.Background>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0"/>
                                                <ColumnDefinition Width="135"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="5"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Label Content="Caution Limits" Grid.Row="0" Grid.Column="1" Height="25" Foreground="White"
                                                       Margin="0,13,0,0" Width="100" HorizontalAlignment="Left"  FontSize="14"/>

                                            <Rectangle Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="0,5,0,5" Fill="#FFD0DBE4"/>

                                            <Label Content="Low" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right"
                                                   FontSize="14" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="White"/>

                                            <TextBox x:Name="MtLimitLow" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left"
                                                     PreviewTextInput="NumericOnly" IsReadOnly="True"
                                                     Height="auto" FontSize="20" Text="{Binding MinProdMoisture}" Background="AntiqueWhite"
                                                     VerticalAlignment="Center" Width="85" Foreground="Blue" />

                                            <Label Grid.Row="0" Grid.Column="3" Content="{Binding MoistureUnit}" VerticalAlignment="Center" Foreground="White"
                                                   HorizontalAlignment="Left" Margin="0,0,0,0"  FontSize="14"/>


                                            <Label Content="High" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" 
                                                   FontSize="14" VerticalAlignment="Center" Foreground="White"/>
                                            <TextBox x:Name="MtLimitHi" Grid.Row="3" Grid.Column="2"
                                                         IsReadOnly="True"  Background="AntiqueWhite" 
                                                        HorizontalAlignment="Left" Height="auto" FontSize="20" Text="{Binding MaxProdMoisture}"
                                                        VerticalAlignment="Center" PreviewTextInput="NumericOnly"
                                                        Width="85" Foreground="Blue" />
                                            <Label FontSize="14" Grid.Row="3" Grid.Column="3" Foreground="White"
                                                   Content="{Binding MoistureUnit}" HorizontalAlignment="Left" Height="27" />


                                            <Label Content="Caution Low" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Grid.ColumnSpan="2"
                                                           FontSize="12" VerticalAlignment="Center" Height="24"  Opacity="{Binding CoutionMtOpa}" />

                                            <TextBox x:Name="CauMoistLow" Grid.Column="2" Grid.Row="1" Text="{Binding CautionMoistLow}"
                                                             Background="AntiqueWhite" IsEnabled="{Binding BMtCauLimit}" Opacity="{Binding CoutionMtOpa}"
                                                             IsReadOnly="True"
                                                             HorizontalAlignment="Left"  VerticalAlignment="Center" Width="85" FontSize="20"/>

                                            <Label Content="Caution High" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Grid.ColumnSpan="2"
                                                           FontSize="12" VerticalAlignment="Center" Height="24" Opacity="{Binding CoutionMtOpa}"/>


                                            <Label Grid.Column="3" Grid.Row="1" Content="{Binding MoistureUnit}" Margin="5,0,0,0" FontSize="14"
                                                           HorizontalAlignment="Left" Height="27"  Width="auto" VerticalAlignment="Center"  Opacity="{Binding CoutionMtOpa}"/>


                                            <TextBox x:Name="CauMoistHi" Grid.Column="2" Grid.Row="2" Text="{Binding CautionMoistHigh}"
                                                            IsEnabled="{Binding BMtCauLimit}" Opacity="{Binding CoutionMtOpa}"
                                                            IsReadOnly="True"  Background="AntiqueWhite" 
                                                            HorizontalAlignment="Left" VerticalAlignment="Top" Width="85" FontSize="20"/>

                                            <Label  Grid.Column="3" Grid.Row="2" Content="{Binding MoistureUnit}" Margin="5,0,0,0" FontSize="14"
                                                           HorizontalAlignment="Left" Height="27"  Width="auto" VerticalAlignment="Center"  Opacity="{Binding CoutionMtOpa}"/>

                                            <CheckBox x:Name="CbMCaution"  Grid.Column="1"  Grid.Row="1" IsChecked="{Binding MUseCaution}" IsEnabled="False" 
                                                          Style="{StaticResource CheckBoxStyle}" Foreground="blue"
                                                         Content="Enable" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.RowSpan="2"/>

                                        </Grid>
                                    </Border>
                                </GroupBox>

                                <GroupBox x:Name="GroupWeight" Grid.Column="2" Header="Scale Weight Limits" 
                                              Foreground="Yellow"  HorizontalAlignment="Stretch" FontSize="14"
                                              VerticalAlignment="Stretch"  BorderBrush="Black" BorderThickness="0">
                                    <GroupBox.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="10" Direction="721" 
                                                  ShadowDepth="1" RenderingBias="Quality" />
                                    </GroupBox.Effect>
                                    <Border BorderThickness="2" BorderBrush="#FFAEA9A9" Margin="0,4,0,0">
                                        <Grid Margin="5">
                                            <Grid.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="Black" Offset="0"/>
                                                    <GradientStop Color="#FF979797" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Grid.Background>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0"/>
                                                <ColumnDefinition Width="135"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="5"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Rectangle Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="0,5,0,5" Fill="#FFD0DBE4"/>

                                            <Label Content="Caution Limits" Grid.Row="0" Grid.Column="1" Height="25" Foreground="White"
                                                       Margin="0,13,0,0" Width="100" HorizontalAlignment="Left"  FontSize="14"/>

                                            <Label Content="Low" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right"
                                                   FontSize="14" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                            <TextBox x:Name="WtLimitLow" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left" 
                                                     PreviewTextInput="NumericOnly"  IsReadOnly="True"
                                                     FontSize="20" Text="{Binding MinProdWeight}" Foreground="Blue" 
                                                     Background="AntiqueWhite" TextWrapping="Wrap" VerticalAlignment="Center" Width="85"/>
                                            <Label Grid.Row="0" Grid.Column="3" Content="{Binding WtUnit}" VerticalAlignment="Center" Foreground="White"
                                                   HorizontalAlignment="Left" Margin="0,0,0,0"  FontSize="14"/>

                                            <Label Content="High" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" 
                                                   FontSize="14" VerticalAlignment="Center" Foreground="White"/>
                                            <TextBox x:Name="WtLimitHi" Grid.Row="3" Grid.Column="2" 
                                                     PreviewTextInput="NumericOnly" IsReadOnly="True" Background="AntiqueWhite" 
                                                     HorizontalAlignment="Left"  Text="{Binding MaxProdWeight}" 
                                                     FontSize="20" VerticalAlignment="Center" Width="85" Foreground="Blue"/>
                                            <Label FontSize="14" Grid.Row="3" Grid.Column="3" Foreground="White"
                                                   Content="{Binding WtUnit}" HorizontalAlignment="Left" Height="27" />

                                            <Label Content="Caution Low" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Grid.ColumnSpan="2"
                                                           FontSize="12" VerticalAlignment="Center" Height="24"  Opacity="{Binding CoutionWtOpa}"/>
                                            <Label Content="Caution High" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Grid.ColumnSpan="2"
                                                           FontSize="12" VerticalAlignment="Center" Height="24" Opacity="{Binding CoutionWtOpa}"/>

                                            <TextBox  Grid.Column="2" Grid.Row="1" Text="{Binding CautionWTLow}" Background="AntiqueWhite" 
                                                      IsEnabled="{Binding BWtCauLimit}" Opacity="{Binding CoutionWtOpa}" IsReadOnly="True"
                                                      HorizontalAlignment="Left"  VerticalAlignment="Center" Width="85" FontSize="20"/>

                                            <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding CautionWTHigh}" Opacity="{Binding CoutionWtOpa}"
                                                     Background="AntiqueWhite" IsEnabled="{Binding BWtCauLimit}" IsReadOnly="True"
                                                    HorizontalAlignment="Left"   VerticalAlignment="Top" Width="85" FontSize="20"/>

                                            <Label Grid.Column="3" Grid.Row="1" Content="{Binding WtUnit}" Margin="5,0,0,0" FontSize="14"
                                                           HorizontalAlignment="Left" Height="27"  Width="auto" VerticalAlignment="Center" Opacity="{Binding CoutionWtOpa}"/>
                                            <Label  Grid.Column="3" Grid.Row="2"  Content="{Binding WtUnit}" Margin="5,0,0,0" FontSize="14"
                                                           HorizontalAlignment="Left" Height="27"  Width="auto" VerticalAlignment="Center" Opacity="{Binding CoutionWtOpa}"/>

                                            <CheckBox Grid.Column="1"  Grid.Row="1" IsChecked="{Binding WTUseCaution}" Grid.RowSpan="2" IsEnabled="False" 
                                                          Style="{StaticResource CheckBoxStyle}" Foreground="blue"
                                                              Content="Enable" HorizontalAlignment="Left"  VerticalAlignment="Center" />
                                        </Grid>
                                    </Border>
                                </GroupBox>
                            </Grid>
                        </Grid>

                        <Border  Grid.Column="4" Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}"
                             CornerRadius="10" BorderThickness="2" BorderBrush="Gray" Margin="10">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" BlurRadius="10" Direction="721" ShadowDepth="2" RenderingBias="Quality" />
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0"/>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="1" Content="Default Values" Grid.ColumnSpan="2" FontWeight="Normal"
                                           Foreground="White" VerticalAlignment="Center" FontSize="16"/>
                                <Label Content="Weight" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right"
                                                   FontSize="14" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="Yellow"/>
                                <TextBox x:Name="DefWeight" Grid.Row="1" Grid.Column="2" PreviewTextInput="NumericOnly"
                                             HorizontalAlignment="Center"  FontSize="18" Text="{Binding PDWeight}" IsReadOnly="True"
                                             Background="AntiqueWhite" TextWrapping="Wrap" VerticalAlignment="Center" Width="80" Foreground="Black"/>

                                <Label Content="Net Weight" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right"
                                                   FontSize="14" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="Yellow"/>
                                <TextBox x:Name="DefNetWt" Grid.Row="2" Grid.Column="2" IsReadOnly="True" PreviewTextInput="NumericOnly"
                                             HorizontalAlignment="Center"  FontSize="18" Text="{Binding PDNtWeight}" 
                                             Background="AntiqueWhite" TextWrapping="Wrap" VerticalAlignment="Center" Width="80" Foreground="Black"/>

                                <Label Content="Forte#" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right"
                                                   FontSize="14" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="Yellow"/>
                                <TextBox x:Name="DefForte" Grid.Row="3" Grid.Column="2" IsReadOnly="True" PreviewTextInput="NumericOnly"
                                             HorizontalAlignment="Center"  FontSize="18" Text="{Binding PDForte}" 
                                             Background="AntiqueWhite" TextWrapping="Wrap" VerticalAlignment="Center" Width="80" Foreground="Black"/>

                                <Label Content="Moisture" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right"
                                                   FontSize="14" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="Yellow"/>
                                <TextBox x:Name="DefMoisture" Grid.Row="4" Grid.Column="2" IsReadOnly="True" 
                                             HorizontalAlignment="Center" FontSize="18" Text="{Binding PDMoisture}" 
                                             Background="AntiqueWhite" TextWrapping="Wrap" VerticalAlignment="Center" Width="80" Foreground="Black"/>

                                <Label FontSize="14" Grid.Column="3" Grid.Row="1" Foreground="White"
                                                   Content="{Binding WtUnit}" HorizontalAlignment="Left" Height="27" />

                                <Label FontSize="14" Grid.Column="3" Grid.Row="2" Foreground="White"
                                                   Content="{Binding WtUnit}" HorizontalAlignment="Left" Height="27" />

                                <Label FontSize="14" Grid.Column="3" Grid.Row="4" Foreground="White"
                                                   Content="{Binding MoistureUnit}" HorizontalAlignment="Left" Height="27" />
                            </Grid>

                        </Border>

                        <Border  Grid.Column="4" Grid.Row="2" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}"
                             CornerRadius="10" BorderThickness="2" BorderBrush="Gray" Margin="10,0,10,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" BlurRadius="10" Direction="721" ShadowDepth="2" RenderingBias="Quality" />
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0"/>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="0"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TareWeight" Grid.Column="2" Text="{Binding TareWeight}"
                                              PreviewTextInput="NumericOnly" Width="80" FontSize="18"
                                              Foreground="Black" Background="AntiqueWhite" IsReadOnly="True"/>
                                <Label FontSize="14" Grid.Column="3" Foreground="White"
                                                   Content="{Binding WtUnit}" HorizontalAlignment="Left" Height="27" />
                                <Label Content="Tare Weight" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right"
                                                   FontSize="14" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="Yellow"/>
                            </Grid>
                        </Border>
                        <Border  Grid.Row="1" Grid.Column="5" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}"
                             CornerRadius="10" BorderThickness="2" BorderBrush="Gray" Margin="10">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" BlurRadius="10" Direction="721" ShadowDepth="2" RenderingBias="Quality" />
                            </Border.Effect>
                            <Grid Margin="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0"/>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="1" Content="Meterial Labels" Grid.ColumnSpan="2" FontWeight="Normal"
                                           Foreground="White" VerticalAlignment="Center" FontSize="16"/>

                                <Label Content="{Binding LbFieldOne}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right"
                                                   FontSize="14" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="Yellow"/>
                                <TextBox x:Name="FieldOne" Grid.Row="1" Grid.Column="2" IsReadOnly="True"
                                             HorizontalAlignment="Center" FontSize="18" Text="{Binding FieldOne}" 
                                             Background="AntiqueWhite" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Foreground="Black"/>
                                <Label Content="{Binding LbFieldTwo}" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right"
                                                   FontSize="14" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="Yellow"/>
                                <TextBox x:Name="FieldTwo" Grid.Row="2" Grid.Column="2" IsReadOnly="True"
                                             HorizontalAlignment="Center" FontSize="18" Text="{Binding FieldTwo}"
                                             Background="AntiqueWhite" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Foreground="Black"/>
                                <Label Content="{Binding LbFieldThree}" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right"
                                                   FontSize="14" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="Yellow"/>
                                <TextBox x:Name="FieldThree"  Grid.Row="3" Grid.Column="2" IsReadOnly="True"
                                             HorizontalAlignment="Center" FontSize="18" Text="{Binding FieldThree}" 
                                             Background="AntiqueWhite" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Foreground="Black"/>
                                <Label Content="{Binding LbFieldFour}" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right"
                                                   FontSize="14" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="Yellow"/>
                                <TextBox x:Name="FieldFour"  Grid.Row="4" Grid.Column="2" IsReadOnly="True"
                                             HorizontalAlignment="Center" FontSize="18" Text="{Binding FieldFour}" 
                                             Background="AntiqueWhite" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Foreground="Black"/>
                            </Grid>
                        </Border>

                        <Button x:Name="btnMod" Content="Modify" HorizontalAlignment="Center" Foreground="DarkBlue"
                                            Grid.Column="5" Grid.Row="2" Command="{Binding ModifyProdCommand}" FontSize="18"
                                            VerticalAlignment="Center" Width="100" Height="35" Cursor="Hand" >
                            <Button.Background>
                                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                                    <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                                    <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                                    <GradientStop Color="#FFF99402" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Grid Grid.Row="1" Grid.Column="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="5"/>
                            </Grid.RowDefinitions>
                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem  Height="68"  Width="{Binding MainTabWidth}" IsEnabled="{Binding BLogin}">
                    <TabItem.Header >
                        <StackPanel Orientation="Horizontal">
                            <MaterialDesign:PackIcon Kind="TruckDelivery" VerticalAlignment="Center" Width="26" Height="26"/>
                            <TextBlock Text="Output" Margin="2,0,0,0" VerticalAlignment="Center"  
                                   FontWeight="Bold" FontSize="18" FontFamily="Arial"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid >
                        <Grid.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="CadetBlue" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.Background>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="500"/>
                            <ColumnDefinition Width="500"/>
                            <ColumnDefinition Width="0"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="1"  CornerRadius="10"  Background="{DynamicResource ChartTitleForeground}"
                                        BorderThickness="1" BorderBrush="DimGray" Margin="0,20,0,10">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" BlurRadius="10" Direction="721" ShadowDepth="2" RenderingBias="Quality" />
                            </Border.Effect>
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="2"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2"/>
                                </Grid.ColumnDefinitions>

                                <Rectangle Grid.Column="1"  Grid.Row="2" Fill="Black" Grid.ColumnSpan="3"/>
                                <Rectangle Grid.Column="1"  Grid.Row="4" Fill="Black" Grid.ColumnSpan="3"/>
                                <Rectangle Grid.Column="1"  Grid.Row="6" Fill="Black" Grid.ColumnSpan="3"/>

                                <CheckBox Grid.Row="0" Grid.Column="1" Content="Shared File output" Grid.ColumnSpan="2" 
                                                    IsChecked="{Binding SharedFileChecked}" Style="{StaticResource CheckBoxStyle}"
                                                    VerticalContentAlignment="Center" Panel.ZIndex="99" Foreground="Yellow"/>

                                <Button Grid.Column="2" Grid.Row="1" Width="80" Height="30" Content="Config."
                                                    Command="{Binding SharefileConfigCommand}" Panel.ZIndex="99"
                                                    Style="{StaticResource RoundButtonTemplate}" Background="GhostWhite">
                                </Button>

                                <TextBox Grid.Row="1" Grid.Column="3" Margin="0,0,0,0" Width="300" 
                                                     HorizontalAlignment="Left" IsReadOnly="True"
                                                     Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" 
                                                     Text="{Binding ShareFileOutString}" Height="27" VerticalContentAlignment="Center"
                                                     Grid.ColumnSpan="5"  Foreground="DarkBlue" Panel.ZIndex="99"/>

                                <Button Grid.Column="2" Grid.Row="7" Height="30"  Width="80" 
                                                    Command="{Binding WriteSharedFileCommand}" Panel.ZIndex="99"
                                                    Cursor="Hand" Style="{StaticResource RoundButtonTemplate}" >
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                            <GradientStop Color="#FFF3F3F3" Offset="0"/>
                                            <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                                            <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                                            <GradientStop Color="#FF6AC176" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <StackPanel>
                                        <TextBlock Text="Write" Margin="0,3,0,0"/>
                                        <MaterialDesign:PackIcon Kind="Pencil" Margin="42,-19,0,0" 
                                                        VerticalAlignment="Center" Width="25" Height="25"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnBrowse" Grid.Column="2"  Content="Location" 
                                                    HorizontalAlignment="Center" Command="{Binding BrowseLocCommand}"
                                                    ToolTip="Select File location" Height="30" Cursor="Hand"
                                                    Grid.Row="3" VerticalAlignment="Center" Width="80" Panel.ZIndex="99"
                                                    Style="{StaticResource RoundButtonTemplate}" Background="Bisque"/>

                                <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding SharedFilePath}" Height="27"
                                                     IsEnabled="{Binding SharedFileChecked}" Width="200" Panel.ZIndex="99"
                                                     Background="White" IsReadOnly="True" HorizontalAlignment="Left"/>

                                <TextBox  x:Name="SharedFileName" Grid.Column="3" Grid.Row="5"  Height="27"
                                                      MouseDoubleClick="SharedFileName_dclick" IsReadOnly="True"
                                                      IsEnabled="{Binding SharedFileChecked}"  HorizontalAlignment="Left"
                                                      Panel.ZIndex="99"  Background="AntiqueWhite" Width="200" 
                                                      VerticalContentAlignment="Center" Foreground="Black" Text="{Binding SharedFileName}"/>

                                <Button Grid.Row="5" Grid.Column="2"  Height="30" 
                                                HorizontalAlignment="Center"  Panel.ZIndex="99"
                                                Command="{Binding SaveSharedFileCommand}" Width="80"
                                                Style="{StaticResource RoundButtonTemplate}">
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                            <GradientStop Color="#FFF3F3F3" Offset="0"/>
                                            <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                                            <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                                            <GradientStop Color="#FF6AC176" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <StackPanel>
                                        <TextBlock Text="Save" Margin="0,3,0,0"/>
                                        <MaterialDesign:PackIcon Kind="ContentSave" Margin="42,-19,0,0" 
                                                        VerticalAlignment="Center" Width="25" Height="25"/>
                                    </StackPanel>
                                </Button>

                                <TextBox Grid.Row="9" Grid.Column="2" Margin="5,0,5,0"  VerticalAlignment="Center"
                                                     Text="{Binding Outputstatus}" FontSize="14" HorizontalContentAlignment="Left"
                                                     Grid.ColumnSpan="4" Foreground="White" Background="Transparent" Panel.ZIndex="99"/>

                                <Label Grid.Row="9" Grid.Column="1" Content="Status :" Margin="0" Panel.ZIndex="99"
                                                   Foreground="AntiqueWhite" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <Label.Effect>
                                        <DropShadowEffect/>
                                    </Label.Effect>
                                </Label>

                                <Rectangle Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="6">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="Gray" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                        </Border>

                    </Grid>
                </TabItem>
            </TabControl>
            <!---  End Row 1 -->

            <!---  Row 2  Summary Row-->
            <Grid Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="1" Margin="0,0,0,0"  Background="Transparent">
                <Grid.Resources>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TabControl  TabStripPlacement="Bottom"  FontFamily="Verdana" FontSize="12" BorderThickness="0">
                    <TabControl.Resources>
                        <Style TargetType="{x:Type TabPanel}">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                        </Style>

                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Grid Name="Panel">
                                            <Border 
                                        Name="Border"
                                        Background="LightSkyBlue"
                                        BorderBrush="Gray" 
                                        BorderThickness="1,1,3,1" 
                                        CornerRadius="0,0,6,6" >
                                                <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Cursor="Hand"
                                        ToolTip="Click on tab to select Archives type"
                                        Margin="20,4,20,4"/>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Panel" Property="Background" Value="Transparent" />
                                                <Setter Property="Foreground" Value="Black" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter TargetName="Panel" Property="Background" Value="Transparent" />
                                                <Setter Property="Foreground" Value="Gray" />
                                                <Setter TargetName="Border" Property="Background" Value="White" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>

                    <TabItem x:Name="BaleTab" Header="Data Table"  DataContext="{Binding}" 
                         IsSelected="{Binding SelectBaletab, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                        <!--DataGrid-->
                        <DataGrid x:Name="DataGridControl"  Margin="0,5,0,5"
                                  AutoGeneratingColumn="OnAutoGeneratingColumn"
                                  ColumnWidth="10*"
                                  HorizontalAlignment="Left"
                                  HorizontalContentAlignment="Center"
                                  CanUserAddRows="False" 
                                  AutoGenerateColumns="true" 
                                  SelectedIndex="{Binding SelectData, Mode=TwoWay}" 
                                  SelectionMode="Single"
                                  Background="Transparent"  
                                  ItemsSource="{Binding LvDatatable}"
                                  AlternatingRowBackground="#FFE5ECE2" 
                                  HorizontalGridLinesBrush="Gray" 
                                  VerticalGridLinesBrush="Gray"
                                  CanUserReorderColumns="False"
                                  CanUserSortColumns="False"
                                  EnableRowVirtualization="True" 
                                  EnableColumnVirtualization="True"
                                  IsSynchronizedWithCurrentItem="false"
                                  IsReadOnly="True"
                                  FontWeight="Medium" Grid.ColumnSpan="3" >

                            <DataGrid.Effect>
                                <DropShadowEffect ShadowDepth="4"
                                          Direction="330"
                                          Color="Black"
                                          Opacity="0.5"
                                          BlurRadius="4"/>
                            </DataGrid.Effect>
                            <DataGrid.Columns>
                                <DataGridTextColumn>
                                    <DataGridTextColumn.Foreground>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="White" Offset="1"/>
                                        </LinearGradientBrush>
                                    </DataGridTextColumn.Foreground>
                                </DataGridTextColumn>
                            </DataGrid.Columns>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="black"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" >
                                        <Setter.Value>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="Black" Offset="0"/>
                                                <GradientStop Color="White" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                        </DataGrid>
                    </TabItem>

                    <TabItem x:Name="LotTab" Header="Lot Summary" IsEnabled="{Binding LpEnable}" Visibility="Hidden">
                        <ContentControl Grid.Column="1" Grid.Row="1" Margin="5"
                                    Content="{Binding LotSummary}" OpacityMask="Black"/>
                    </TabItem>
                </TabControl>
            </Grid>
            <!---  End Row 2  Summary Row-->

            <!---  Row 3  Status Row-->

            <DockPanel Grid.Row="3" Height="50" VerticalAlignment="Bottom" Grid.Column="0" Grid.ColumnSpan="4">
                <DockPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="0.3"/>
                    </LinearGradientBrush>
                </DockPanel.Background>

                <StatusBar DockPanel.Dock="Bottom" BorderThickness="2" BorderBrush="White"  >
                    <StatusBar.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FFDEDADA" Offset="0.514"/>
                        </LinearGradientBrush>
                    </StatusBar.Background>
                    <StatusBar.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </StatusBar.ItemsPanel>

                    <StatusBarItem x:Name="SBInfo1" HorizontalAlignment="Left"  Grid.Column="0" Grid.ColumnSpan="2">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Status : "  FontSize="16"/>
                            <TextBlock x:Name="tbStatus"  Text="{Binding StringStatus}" 
                                    VerticalAlignment="Center" FontSize="20" Width="auto" Height="auto" Foreground="Blue">
                                <TextBlock.Resources>
                                    <Style TargetType="ScrollViewer">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect ShadowDepth="4"
                                              Direction="330"
                                              Color="Black"
                                              Opacity="0.5"
                                              BlurRadius="4"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBlock.Resources>
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="4"
                                              Direction="330"
                                              Color="Black"
                                              Opacity="0.5"
                                              BlurRadius="4"/>
                                </TextBlock.Effect>

                            </TextBlock>
                        </StackPanel>
                    </StatusBarItem>
                </StatusBar>
            </DockPanel>
            <!---  End Row 3  Status Row-->

        </Grid>
    </Border>
</Window>
