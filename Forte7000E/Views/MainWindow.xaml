                            <MaterialDesign:PackIcon Kind="PackageVariant"
                                                 VerticalAlignment="Center" Width="28" Height="28"/>
                            <TextBlock Text="Material"  Margin="2,0,0,0"  VerticalAlignment="Center"
                                   FontWeight="Bold" FontSize="16" FontFamily="Arial"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Grid.Column="1" Grid.Row="1">
                        <Grid.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="CadetBlue" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="5"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>

                        <Menu Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"  Visibility="Hidden"
                                  HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" VerticalAlignment="Top" Width="auto">
