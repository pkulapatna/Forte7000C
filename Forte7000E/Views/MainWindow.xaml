<Window x:Class="Forte7000C.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        mc:Ignorable="d" 
        Title="Forté E7000 - 2.1" Height="800" Width="1400" 
        WindowState="{Binding CurWindowState,Mode=TwoWay}" 
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" 
        SizeChanged="MainWin_SideChanged" Closing="Window_Closing" 
        PreviewKeyDown="BtnInit_PreviewKeyDown" Icon="/images/Desk Top Icon.ICO" >
    <Window.Resources>
        <Style TargetType="{x:Type Border}">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="DarkGray"/>
        </Style>
    </Window.Resources>
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="0.47"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.InputBindings>
        <KeyBinding 
            Command="{Binding InitializeCommand}" 
            Key="F2"/>
        <KeyBinding 
            Command="{Binding ReadCommand}" 
            Key="F3"/>
    </Window.InputBindings>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedPageICommand}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Unloaded">
            <i:InvokeCommandAction Command="{Binding ClosedPageICommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Border>
        <Grid Margin="4" >
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="350"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0"/>
            </Grid.ColumnDefinitions>

            <!--- Top most Row  -->
            <Grid Grid.ColumnSpan="1" Grid.Column="1"  MouseLeftButtonDown="Grid_mouseDown">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Transparent"/>
                        <GradientStop Color="#FFDEDADA" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--- Menu Drop Down 
            <StackPanel  Margin="10,0,0,0" Orientation="Horizontal" HorizontalAlignment="Left"  VerticalAlignment="Center">
                <TextBlock Text="Menu" Width="auto"  FontWeight="Medium" Foreground="#FFF1E243"
                           VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="18">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
                </TextBlock>
                <MaterialDesign:PopupBox HorizontalAlignment="Right" Foreground="White" VerticalAlignment="Center"
                                         PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
                    <StackPanel Width="120" Background="#FF167193">
                        <Button Content="Login" Command="{Binding LogonCommand}" 
                                FontSize="14" FontWeight="Medium" Foreground="AntiqueWhite" Cursor="Hand"/>
                        <Separator Foreground="Black"/>
                        <Button Content="Logout" Command="{Binding LogoutCommand}" 
                                FontSize="14" FontWeight="Medium" Foreground="AntiqueWhite"  Cursor="Hand"/>
                        <Separator Foreground="DarkGray"></Separator>
                        <Button Content="ShowLog" Command="{Binding ViewLogCommand}" 
                                FontSize="14" FontWeight="Medium" Foreground="AntiqueWhite" Cursor="Hand"/>
                        <Separator Foreground="DarkGray"></Separator>
                        <Button Content="ShowArchives" Command="{Binding ViewArchivesCommand}" 
                                FontSize="14" FontWeight="Medium" Foreground="AntiqueWhite" Cursor="Hand"/>
                    </StackPanel>
                </MaterialDesign:PopupBox>
            </StackPanel>
            - End Menu Drop Down -->

                <Label Grid.Column="0" Content="Forté E-7000" 
                   FontWeight="Medium" HorizontalAlignment="Left" 
                   FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0"
                   Background="Transparent" Foreground="White" FontFamily="Yu Gothic UI">
                    <Label.Effect>
                        <DropShadowEffect/>
                    </Label.Effect>
                </Label>

                <!--- Menu Options on Row 0 -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right" Background="{x:Null}">

                    <Label Content="LogFile" Margin="10,0,-10,0"  Foreground="White" VerticalAlignment="Center" FontSize="16">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <Button  Width="38" Height="38" VerticalAlignment="Top" Cursor="Hand" 
                         Command="{Binding ViewLogCommand}" BorderBrush="{x:Null}"
                         Background="{x:Null}" Foreground="#FFF1E243" Margin="0,0,0,0" ToolTip="Show Log file">
                        <MaterialDesign:PackIcon Kind="MessageAlert" Width="26" Height="26" Foreground="#FFF1E243">
                            <MaterialDesign:PackIcon.Effect>
                                <DropShadowEffect/>
                            </MaterialDesign:PackIcon.Effect>
                        </MaterialDesign:PackIcon>
                    </Button>
                    <Label Content="Archives" Margin="10,0,-10,0"  Foreground="White" VerticalAlignment="Center" FontSize="16">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <Button  Width="38" Height="38" VerticalAlignment="Top" Cursor="Hand"  
                         Command="{Binding ViewArchivesCommand}" BorderBrush="{x:Null}"
                         Background="{x:Null}" Foreground="#FFF1E243" Margin="0,0,0,0" ToolTip="Show Archives">
                        <MaterialDesign:PackIcon Kind="History" Width="26" Height="26">
                            <MaterialDesign:PackIcon.Effect>
                                <DropShadowEffect/>
                            </MaterialDesign:PackIcon.Effect>
                        </MaterialDesign:PackIcon>
                    </Button>

                    <Label Content="Data Table" Margin="10,0,-10,0"  Foreground="White" VerticalAlignment="Center" FontSize="16">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>

                    <Button  Width="38" Height="38" VerticalAlignment="Top" Cursor="Hand" 
                         BorderBrush="{x:Null}"  Command="{Binding ModSummaryTableCommand}"
                         Background="{x:Null}" Foreground="#FFF1E243" Margin="0,0,0,0" ToolTip="Modify Summary Table">
                        <MaterialDesign:PackIcon Kind="Table" Width="26" Height="26" Foreground="#FFF1E243" >
                            <MaterialDesign:PackIcon.Effect>
                                <DropShadowEffect/>
                            </MaterialDesign:PackIcon.Effect>
                        </MaterialDesign:PackIcon>
                    </Button>

                    <Label Content="Product" Margin="10,0,-10,0"  Foreground="White" VerticalAlignment="Center" FontSize="16">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>

                    <Button  Width="38" Height="38" VerticalAlignment="Top" Cursor="Hand" 
                         BorderBrush="{x:Null}"  Command="{Binding ModifyProdCommand}"
                         Background="{x:Null}" Foreground="#FFF1E243" Margin="0,0,0,0" ToolTip="Modify Material Spec.">
                        <MaterialDesign:PackIcon Kind="Grade" Width="26" Height="26" Foreground="#FFF1E243" >
                            <MaterialDesign:PackIcon.Effect>
                                <DropShadowEffect/>
                            </MaterialDesign:PackIcon.Effect>
                        </MaterialDesign:PackIcon>
                    </Button>

                    <Label Content="Login" Margin="10,0,-10,0"  Foreground="White" VerticalAlignment="Center" FontSize="16">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>

                    <Button  Width="38" Height="38" VerticalAlignment="Top" Cursor="Hand"  
                         Command="{Binding LogonCommand}" BorderBrush="{x:Null}"
                         Background="{x:Null}" Foreground="#FFF1E243" Margin="0,0,0,0" ToolTip="Log in">
                        <MaterialDesign:PackIcon Kind="Login" Width="26" Height="26" >
                            <MaterialDesign:PackIcon.Effect>
                                <DropShadowEffect/>
                            </MaterialDesign:PackIcon.Effect>
                        </MaterialDesign:PackIcon>
                    </Button>

                    <Label Content="Logout" Margin="10,0,-10,0"  Foreground="White" VerticalAlignment="Center" FontSize="16">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <Button  Width="38" Height="38" VerticalAlignment="Top" Cursor="Hand" 
                         Command="{Binding LogoutCommand}" BorderBrush="{x:Null}"
                         Background="{x:Null}" Foreground="#FFF1E243" Margin="0,0,0,0" ToolTip="Log out">
                        <MaterialDesign:PackIcon Kind="Logout" Width="26" Height="26" >
                            <MaterialDesign:PackIcon.Effect>
                                <DropShadowEffect/>
                            </MaterialDesign:PackIcon.Effect>
                        </MaterialDesign:PackIcon>
                    </Button>

                    <Label Content="About" Margin="10,0,-10,0" Foreground="White" VerticalAlignment="Center" FontSize="16">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <Button  Width="38" Height="38" VerticalAlignment="Top" Cursor="Hand" 
                         BorderBrush="{x:Null}" Command="{Binding ShowAboutCommand}"
                         Background="{x:Null}" Foreground="#FFF1E243" Margin="0,0,0,0" ToolTip="About - Forté E7000">
                        <MaterialDesign:PackIcon Kind="AboutOutline" Width="26" Height="26">
                            <MaterialDesign:PackIcon.Effect>
                                <DropShadowEffect/>
                            </MaterialDesign:PackIcon.Effect>
                        </MaterialDesign:PackIcon>
                    </Button>

                    <Label Content="ShutDown" Margin="10,0,-10,0" Foreground="White" VerticalAlignment="Center" FontSize="16">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect>
                    </Label>
                    <Button  Width="38" Height="38" VerticalAlignment="Top" Cursor="Hand" 
                         Command="{Binding AppExitCommand}" BorderBrush="{x:Null}" 
                         Background="{x:Null}" Foreground="#FFF1E243" Margin="0,0,0,0" ToolTip="Exit Program">
                        <MaterialDesign:PackIcon Kind="Power" Width="26" Height="26">
                            <MaterialDesign:PackIcon.Effect>
                                <DropShadowEffect/>
                            </MaterialDesign:PackIcon.Effect>
                        </MaterialDesign:PackIcon>
                    </Button>
                </StackPanel>
                <!--- End Menu Options on Row 0 -->
            </Grid>
            <!--- End Top most Row  -->

            <!---  Row 1 -->
            <TabControl x:Name="MainTab" Grid.Column="1" Grid.Row="1" TabStripPlacement="Left"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                    Grid.ColumnSpan="2" ScrollViewer.VerticalScrollBarVisibility="Auto" >
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabPanel}">
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                    </Style>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabItem}">
                                    <Grid x:Name="Panel">
                                        <Border 
                                        x:Name="Border"
                                        Background="LightSkyBlue"
                                        BorderBrush="Gray" 
                                        BorderThickness="1,1,3,5" 
                                        CornerRadius="1,1,6,6" >
                                            <ContentPresenter x:Name="ContentSite"                  
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Stretch"
                                            Width="100"
                                            Height="70"
                                            ContentSource="Header"
                                            Cursor="Hand"
                                            ToolTip="Click on tab to select Options"
                                            Margin="0,0,0,0"/>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Panel" Property="Background" Value="Transparent" />
                                            <Setter Property="Foreground" Value="Black" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Panel" Property="Background" Value="Transparent" />
                                            <Setter Property="Foreground" Value="Gray" />
                                            <Setter TargetName="Border" Property="Background" Value="White" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem x:Name="tabHome" IsSelected="True"  Height="68" Width="{Binding MainTabWidth}" VerticalAlignment="Top" >
                    <TabItem.Header >
                        <StackPanel Orientation="Horizontal">
                            <MaterialDesign:PackIcon Kind="Home"
                                                 VerticalAlignment="Center" Width="28" Height="28"/>
                            <TextBlock Text="Home"  Margin="2,0,0,0"   VerticalAlignment="Center" 
                                   FontWeight="Bold" FontSize="16" FontFamily="Arial"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Background="#FF6A7C8F">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="220"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>

                        <Rectangle Name="animateRec" Grid.Column="2" Grid.Row="4" Margin="5" Fill="#FFC50303" >
                            <Rectangle.Stroke>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Black" Offset="0"/>
                                    <GradientStop Color="#FFF74B4B" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Stroke>
                            <Rectangle.Triggers>
                                <EventTrigger RoutedEvent="Rectangle.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="animateRec"
                                                        Storyboard.TargetProperty="Opacity"
                                                        From="1.0" To="0.0" Duration="0:0:5"
                                                        AutoReverse="True" RepeatBehavior="Forever"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Rectangle.Triggers>
                        </Rectangle>

                        <Label  Grid.Column="1" Grid.Row="2" Margin="0,10,0,0" Panel.ZIndex="10"
                            HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Content="{Binding BigWeightLb}" Foreground="White">
                            <Label.Effect>
                                <DropShadowEffect/>
                            </Label.Effect>
                        </Label>
                        <TextBox x:Name="Weight" Grid.Column="1" Grid.Row="2" Background="Black"
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                             Margin="5" Text="{Binding WeightDat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Foreground="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="120"/>

                        <Label  Grid.Column="3" Grid.Row="2" Panel.ZIndex="10" Margin="0,10,0,0" 
                            HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Content="{Binding BigMoistLb}" Foreground="White">
                            <Label.Effect>
                                <DropShadowEffect/>
                            </Label.Effect>
                        </Label>

                        <TextBox x:Name="Moisture" Grid.Column="3" Grid.Row="2" Background="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                             Margin="5" Text="{Binding MoistureDat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Foreground="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="120"/>

                        <Grid Grid.Column="1" Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnRead" Grid.Column="2"  Width="120" Height="70" Cursor="Hand" Margin="0"
                                ToolTip="Read Testcell Up count or Read Testcell Up count+ scale "
                                Command="{Binding ReadCommand}" Opacity="{Binding ReadOpac}"
                                VerticalAlignment="Center"
                                Style="{StaticResource RoundButtonTemplate}" Content="Read F3" FontSize="20">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="White" Offset="1"/>
                                        <GradientStop Color="#FF167193" Offset="0.03"/>
                                        <GradientStop Color="#FFD7E7EC" Offset="0.837"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>

                            <Button x:Name="_btnInit" Grid.Column="1"  Width="120" Height="70" Cursor="Hand" Margin="0" ToolTip="ReadEmpty or Scale+Empty"
                                Command="{Binding Path=InitializeCommand}" Opacity="{Binding StartOpac}" 
                                Style="{StaticResource RoundButtonTemplate}" Content="Initialize F2" FontSize="20" VerticalAlignment="Center">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="White" Offset="1"/>
                                        <GradientStop Color="#FF167193" Offset="0.03"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>

                        </Grid>

                        <Grid Grid.Row="2" Grid.Column="2" Grid.RowSpan="2">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="125"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="0"/>
                            </Grid.RowDefinitions>

                            <TextBox  Background="Aquamarine"
                                  VerticalAlignment="Top"
                                  Height="120"
                                  FontSize="20"
                                  Text="{Binding instruction,UpdateSourceTrigger=PropertyChanged}"
                                  TextWrapping="Wrap"
                                  HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Disabled"
                                  AcceptsReturn="True"/>

                            <Border Grid.Row="2" BorderThickness="0" Margin="0">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF778DC7" Offset="0"/>
                                        <GradientStop Color="#FF606061" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Grid Grid.Row="2" Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="0"/>
                                        <ColumnDefinition Width="10"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="0"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Label Grid.Column="1"  Grid.Row="1" Content="Product :" Background="Transparent" Foreground="White"
                                       HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="18">
                                        <Label.Effect>
                                            <DropShadowEffect/>
                                        </Label.Effect>
                                    </Label>

                                    <ComboBox Grid.Column="1" Grid.Row="3" IsEnabled="{Binding BIdle}" Height="30" Width="140" HorizontalAlignment="Left"
                                      ItemsSource="{Binding ProductList, UpdateSourceTrigger=PropertyChanged}" SelectedIndex="{Binding ProdSelectedIndex}" 
                                      FontSize="14" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />

                                    <Label Grid.Column="2" Grid.Row="1" Content="Calibrations :"  Background="Transparent" Foreground="White"
                                       HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="18">
                                        <Label.Effect>
                                            <DropShadowEffect/>
                                        </Label.Effect>
                                    </Label>

                                    <TextBox Grid.Column="2" Grid.Row="3" Text="{Binding SelCalValue}" VerticalAlignment="Center" HorizontalAlignment="Left"
                                             Background="AntiqueWhite" Width="120" IsReadOnly="True" FontSize="18"/>

                                    <Label Grid.Column="3" Grid.Row="1" Content="Serial # :" VerticalAlignment="Bottom" 
                                            Background="Transparent" Foreground="White" FontSize="18"  HorizontalAlignment="Left">
                                        <Label.Effect>
                                            <DropShadowEffect/>
                                        </Label.Effect>
                                    </Label>

                                    <TextBox x:Name="Serial"  Grid.Row="3" Grid.Column="3"
                                             Background="AntiqueWhite"  MouseDoubleClick="SampleBox_dclick"
                                             FontSize="18" Foreground="Black" 
                                             Text="{Binding NewSerialNum,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>

                                    <Label Grid.Column="2" Grid.Row="4" Content="Next Lot # :" VerticalAlignment="Bottom" 
                                            Background="Transparent" Foreground="White" FontSize="18"  HorizontalAlignment="Right">
                                        <Label.Effect>
                                            <DropShadowEffect/>
                                        </Label.Effect>
                                    </Label>

                                    <TextBox  x:Name="NextLotNum" Grid.Row="4" Grid.Column="3" 
                                            Text="{Binding NextLotNumber, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                            PreviewTextInput="NumericOnly" MouseDoubleClick="NextLotNum_dclick"
                                            Background="AntiqueWhite" FontSize="18"  Foreground="Black" IsReadOnly="True"/>

                                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Grid.ColumnSpan="2"
                                                Visibility="{Binding ShowScaleEnter,UpdateSourceTrigger=PropertyChanged}">
                                        <MaterialDesign:PackIcon Kind="Scale" Width="30" Height="30" Margin="5,5,0,0"
                                                                 VerticalAlignment="Center" Foreground="White">
                                            <MaterialDesign:PackIcon.Effect>
                                                <DropShadowEffect/>
                                            </MaterialDesign:PackIcon.Effect>
                                        </MaterialDesign:PackIcon>
                                        <TextBox x:Name="WeightEntry" MouseDoubleClick="WeightEntry_dclick"
                                                 IsReadOnly="True" Margin="10,0,0,0" 
                                                 Width="110" Background="AntiqueWhite" FontSize="18"/>



                                    </StackPanel>
                                    
                                    
                                    <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="4" FontSize="18" 
                                                Text="{Binding Currentstates}" Background="AntiqueWhite" Foreground="Black"/>

                                    <xctk:BusyIndicator Grid.Column="1" Grid.Row="5" IsBusy="{Binding BActive,UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2" 
                                                    BusyContent="Please Wait!" Background="Red" Panel.ZIndex="99"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                    </xctk:BusyIndicator>
                                </Grid>
                            </Border>


                            <Grid Grid.Row="1" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>

                                <Label Content="SCALE :" Foreground="Azure"  FontSize="14" FontWeight="Medium" HorizontalAlignment="Right">
                                    <Label.Effect>
                                        <DropShadowEffect/>
                                    </Label.Effect>
                                </Label>

                                <TextBox Grid.Column="1" Text="{Binding DevSCaleMode}" Foreground="Azure" Width="100" HorizontalContentAlignment="Center"
                                      FontSize="18" FontWeight="Medium" Background="Gray" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                                <Label Grid.Column="2" Content="OSC. :" Foreground="Azure" FontSize="14" FontWeight="Medium" HorizontalAlignment="Right">
                                    <Label.Effect>
                                        <DropShadowEffect/>
                                    </Label.Effect>
                                </Label>

                                <TextBox Grid.Column="3" Text="{Binding DevOscMode}"  Foreground="Azure" Width="100" HorizontalContentAlignment="Center"
                                     FontSize="18" FontWeight="Medium" HorizontalAlignment="Left" Background="Gray"  VerticalAlignment="Top"/>
                            </Grid>
                        </Grid>

                        <Grid Grid.Column="3" Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="1"  Width="120" Height="70" Cursor="Hand" Margin="0" Opacity="{Binding ResetOpac}"
                                VerticalAlignment="Center"  Command="{Binding ReSetCommand}" 
                                Style="{StaticResource RoundButtonTemplate}" Content="Reset" FontSize="20" Grid.RowSpan="2">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="White" Offset="1"/>
                                        <GradientStop Color="#FF938216" Offset="0.03"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>

                            <Button Grid.Column="2"  Width="120" Height="70" Cursor="Hand" Command="{Binding AppExitCommand}"
                                Margin="40,5,39,5" VerticalAlignment="Center"
                                Style="{StaticResource RoundButtonTemplate}"  FontSize="20" Grid.RowSpan="2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="EXIT" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    <MaterialDesign:PackIcon Kind="ExitToApp"  Margin="10,0,0,0"
                                                         VerticalAlignment="Center" Width="28" Height="28"/>
                                </StackPanel>
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="White" Offset="1"/>
                                        <GradientStop Color="#FF933216" Offset="0.03"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem  Width="{Binding MainTabWidth}"  Height="68"  IsEnabled="{Binding BLogin}">
                    <TabItem.Header >
                        <StackPanel Orientation="Horizontal">
                            <MaterialDesign:PackIcon Kind="Settings" 
                                                 VerticalAlignment="Center"  Width="28" Height="28"/>
                            <TextBlock Text="Settings"  Margin="2,0,0,0"  VerticalAlignment="Center" 
                                   FontSize="16" FontWeight="Bold" FontFamily="Arial"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Background="#FFCBD3D2">
                        <TabControl TabStripPlacement="Top" Grid.RowSpan="2" >
                            <TabControl.Resources>
